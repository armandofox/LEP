%h2 Language Groups

-#if @user.admin
  =# link_to "Add group", new_group_path, :id => "add group"

%div#groups
  %ul.groups
    %h4 Your Group
    - @groups.each do |group|
      - if @user.id == group.facilitator
        %li.group
          %span= "#{@user.first_name} #{@user.last_name}"
          %span=group.language
          %span=group.time
          %span=group.location
        - if @user.admin
          %div.delete-group
            = link_to "Delete group", group, :method => :delete, :confirm => "Are you sure?"




