%h2 Language Groups

-if @user.admin
  = link_to "Add group", new_group_path, :id => "add group"

%div#groups
  %ul.groups
    - if !@mon_groups.empty?
      %h4 Monday
      - @mon_groups.each do |group|
        %li.group
          %span=group.language
          %span=group.time
          %span=group.location
        %div.delete-group
          = link_to "Delete group", group, :method => :delete, :confirm => "Are you sure?" 
