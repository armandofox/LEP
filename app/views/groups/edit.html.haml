%h2 Edit Language Group

%div.delete-group
  = link_to "Delete group", :group, :class => "btn edit-prof", :method => :delete, :confirm => "Are you sure?"


= form_for :group, url: {action: 'update'}, method: :put do |f| 

  %div.question
    = f.label :language, "Language"
    = f.text_field :language

  %div.question
    = f.label :day, "Day of the week"
    = f.select :day, [["Monday", "Monday"], ["Tuesday", "Tuesday"], ["Wednesday", "Wednesday"], ["Thursday", "Thursday"], ["Friday", "Friday"]]

  %div.question
    = f.label :time, "Time"
    = f.text_field :time

  %div.question
    = f.label :location, "Location"
    = f.text_field :location

  %div.question
    = f.label :info, "Additional information"
    = f.text_area :info

  %div.question
    %p
    = f.submit 'Update Group'

